@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>
<h5>This is where the list of clients lives!</h5>

@if (@Model.Count == 0)
{
  <h5>No Clients Patron Here Yet</h5>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</li>
}

<button>@Html.ActionLink("Add new client", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>