@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3>Edit</h3>
<hr/>
<h5>Edit this client: @Html.DisplayFor(model => model.ClientName)</h5>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  @Html.LabelFor(model => model.ClientName)
  @Html.EditorFor(model => model.ClientName)

  @Html.LabelFor(model => Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Save" />
}

<button>@Html.ActionLink("Back to Client list", "Index")</button>