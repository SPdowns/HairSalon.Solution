@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Stylist>;

<h1>Stylist Page</h1>
<h5>This is where the list of stylists lives!</h5>

@if (@Model.Count == 0)
{
  <h5>No Stylists Work Here Yet</h5>
}

@foreach (Stylist Stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})</li>
}

<button>@Html.ActionLink("Add new stylist", "Create")</button>
<button>@Html.ActionLink("Go Home", "Index", "Home")</button>